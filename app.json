{
  "name": "Caption Changer Bot",
  "description": "Telegram bot to edit captions and enforce channel subscription.",
  "repository": "https://github.com/nikhilsainikhe/Caption-changer",
  "keywords": ["telegram", "bot", "caption", "heroku"],
  "env": {
    "API_ID": {
      "description": "Telegram API ID from my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API Hash from my.telegram.org",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Bot token from BotFather",
      "required": true
    },
    "FORCE_SUB_CHANNEL": {
      "description": "Channel invite link (e.g., https://t.me/+MnxII-5_qqY5ZjE1)",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}