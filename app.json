{
  "name": "CaptionChangerBot",
  "description": "Telegram bot that modifies media captions",
  "env": {
    "API_ID": {
      "description": "Telegram API ID",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API Hash",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Bot token from @BotFather",
      "required": true
    },
    "FORCE_SUB_CHANNEL": {
      "description": "Channel username or ID to enforce subscription",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}